  <script>
    const screens = ['splash', 'moods', 'playlist', 'player'];

    function goTo(screenId) {
      screens.forEach(id => {
        document.getElementById(id).classList.remove('active');
      });
      document.getElementById(screenId).classList.add('active');
    }

    function selectMood(mood) {
      document.getElementById('mood-title').innerText = `Mood: ${mood}`;
      const songList = document.getElementById('song-list');
      songList.innerHTML = '';

      const sampleSongs = {
        Happy: ['Happy Vibes - Smile.mp3', 'Sunshine Tunes - Bright.mp3'],
        Sad: ['Lonely Nights - Rain.mp3', 'Broken Piano - Memories.mp3'],
        Energetic: ['Workout Beats - Pump.mp3', 'Power Bass - Go.mp3'],
        Chill: ['Evening Calm - Relax.mp3', 'Lo-Fi Dreams - Night.mp3']
      };

      sampleSongs[mood].forEach(song => {
        const div = document.createElement('div');
        div.className = 'song';
        div.innerText = song;
        songList.appendChild(div);
      });

      goTo('playlist');
    }
  </script>

